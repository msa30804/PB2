{
  "name": "ppos-desktop",
  "version": "1.0.0",
  "description": "Point of Sale System Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "package-win": "electron-builder --win --x64",
    "package-mac": "electron-builder --mac",
    "package-linux": "electron-builder --linux"
  },
  "keywords": [
    "POS",
    "Point of Sale",
    "Desktop",
    "Electron",
    "Django"
  ],
  "author": "PPOS Team",
  "license": "MIT",
  "build": {
    "appId": "com.ppos.app",
    "productName": "PPOS",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    },
    "extraResources": [
      {
        "from": "../",
        "to": "app",
        "filter": [
          "**/*",
          "!**/node_modules/**",
          "!**/dist/**",
          "!**/electron_app/**",
          "!**/.git/**",
          "!**/__pycache__/**",
          "!**/venv/**",
          "!**/env/**"
        ]
      }
    ]
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.4.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "python-shell": "^5.0.0"
  }
} 